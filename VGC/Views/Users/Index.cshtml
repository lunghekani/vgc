@using System.Collections
@model IEnumerable<VGC.Models.Users>

@{
    ViewData["Title"] = "Users";
}

<div class = "container p-3">
    <div class = "row pt-4">
        <div class = "col-6">
            <h2 class = "text-primary"> User List </h2>
        </div>
         <div class = "col-6 text-right">
             <a asp-controller= "Users" asp-action="Create" class="btn btn-primary">
             Create New User 
             </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class = "table table-bordered table-striped" style = "width: 100%">
            <thead>
                    <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Surname
                    </th>
                    <th>
                        Phone Number
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        Password
                    </th>
                    <th>
                        Confirm Password
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width = "30%">@obj.Name</td>
                    <td width = "30%">@obj.Surname</td>
                    <td width = "30%">@obj.PhoneNumber</td>
                    <td width = "30%">@obj.Email</td>
                    <td width = "30%">@obj.Address</td>
                    <td width = "30%">@obj.Password</td>
                    <td width = "30%">@obj.ConfirmPassword</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller= "Users" asp-route-UserId="@obj.UserId" asp-action="Edit" class="btn btn-primary mx-2">
                                Edit
                            </a>
                            <a asp-controller= "Users" asp-route-UserId="@obj.UserId" asp-action="Delete" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
     }
         else
         {
           <p>No User Exists</p>
         }
</div>



